
<workflow-app name="LoadStaticData" xmlns="uri:oozie:workflow:0.4">
  <global>
      <job-xml>hive-site.xml</job-xml>
  </global>
    <start to="HiveSkript"/>
    <action name="HiveSkript">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <script>/user/cloudera/Scripts/ImportMetadataScript</script>
            <file>/user/cloudera/Workflows/LoadStaticData/lib/hbase-site.xml#hbase-site.xml</file>
            <file>/user/cloudera/Workflows/LoadStaticData/lib/hive-site.xml#hive-site.xml</file>
        </hive>
        <ok to="end"/>
        <error to="kill"/>
    </action>
    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
