
<workflow-app name="ExtractWeatherTables" xmlns="uri:oozie:workflow:0.4">
    <start to="DailyData"/>
    <action name="DailyData">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                  <delete path="${nameNode}/user/cloudera/Staging/DailyData"/>
            </prepare>
            <script>/user/cloudera/Scripts/LoadMultipleFilesInFolders.pig</script>
              <param>pfad=&quot;/user/cloudera/Datasources/Weather/*/Daily Data/*.txt&quot;</param>
              <param>savefileto=&quot;/user/cloudera/Staging/DailyData&quot;</param>
        </pig>
        <ok to="Daily"/>
        <error to="kill"/>
    </action>
    <action name="Daily">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                  <delete path="${nameNode}/user/cloudera/Staging/Daily"/>
            </prepare>
            <script>/user/cloudera/Scripts/LoadMultipleFilesInFolders.pig</script>
              <param>savefileto=&quot;/user/cloudera/Staging/Daily&quot;</param>
              <param>pfad=&quot;/user/cloudera/Datasources/Weather/*/Daily/*.txt&quot;</param>
        </pig>
        <ok to="CreateWeatherTables"/>
        <error to="kill"/>
    </action>
    <action name="CreateWeatherTables">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <script>/user/cloudera/Scripts/CreateTablesWeather</script>
        </hive>
        <ok to="end"/>
        <error to="kill"/>
    </action>
    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
